/* pages/play/play.wxss */

page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
  filter: opacity(0.75) blur(15px);
  /* filter: blur(2px); */
}

.body {
  width: 100%;
  height: 83%;
  background-color: #f8f6f280;
  text-align: center;
}

.cover-black {
  width: 70%;
  height: 400px;
  background-color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  margin-top: 11%;
  border-radius: 50%;
}

.cover {
  border-radius: 50%;
  width: 74%;
}

.music_on {
  animation: audio-rotate 38s linear infinite;
}

@keyframes audio-rotate {
  0% {
    transform: rotateZ(0deg);
  }

  100% {
    transform: rotateZ(360deg);
  }
}

.bottomTools {
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 12%;
  position: fixed;
  margin: 0;
  pad: 0;
  bottom: 0px;
  display: flex;
  flex-direction: row;
  text-align: center;
}

.bottomTools image {
  width: 10%;
  margin: 0 auto;
}

/* ////////////////// */

.flex {
  display: flex;
}

.player {
  width: 100%;
  height: 5%;
  /* position: relative;  */
}

.audioControls {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.textl {
  font-size: 22rpx;
  width: 10%;
  margin-left: 10px;
  margin-right: 0;
}

.textr {
  font-size: 22rpx;
  width: 10%;
  margin-left: 0;
  margin-right: 10px;
}

.audioControls .slider {
  width: 80%;
  margin: 0;
  padding: 0;
}

.audioControls .slider slider {
  margin-left: 8px;
  margin-right: 8px;
}
