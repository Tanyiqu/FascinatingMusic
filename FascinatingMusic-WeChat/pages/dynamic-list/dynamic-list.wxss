/* pages/dynamic-list/dynamic-list.wxss */

.root {
  width: 100%;
  height: 100%;
}

.item {
  display: flex;
  border-bottom: solid 1px #f6f6f6;
  margin-top: 8rpx;
  padding-bottom: 8rpx;
}

.img {
  width: 100rpx;
  margin: 1.5%;
  margin-left: 5%;
  border-radius: 7.5%;
}

.right {
  padding: 0 3% 0 3%;
}

.time {
  margin-top: 1.5%;
  font-size: 26rpx;
  color: #808080;
}

.content {
  font-size: 30rpx;
}

navigator {
  width: 95%;
  height: 100rpx;
  margin-top: 2%;
  margin-bottom: 1%;
  padding: 1%;
  background-color: #f3f3f380;
  border-radius: 15rpx;
}

navigator > view {
  display: flex;
  flex-direction: row;
}

navigator > view > view {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  margin: 3rpx 20rpx 0 20rpx;
}

.author {
  font-size: 22rpx;
  margin: 20rpx 20rpx 0 20rpx;
}

navigator > view > image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20%;
  filter: opacity(0.75);
}
