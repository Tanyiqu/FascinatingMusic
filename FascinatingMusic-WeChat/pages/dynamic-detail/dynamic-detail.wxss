/* pages/dynamic-detail/dynamic-detail.wxss */

.root {
  padding: 2% 4%;
}

.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
  filter: opacity(0.15);
}

.date {
  font-size: 40rpx;
  margin-bottom: 2%;
}

navigator {
  /* width: fit-content; */
  width: 92%;
  margin-top: 2%;
  margin-bottom: 1%;
  padding: 1%;
  background-color: #f3f3f380;
  border-radius: 15rpx;
}

navigator > view {
  display: flex;
  flex-direction: row;
}

navigator > view > view {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  margin: 5rpx 20rpx 0 20rpx;
}

.author {
  font-size: 26rpx;
  margin: 25rpx 20rpx 0 20rpx;
}

navigator > view > image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.content {
  width: 92%;
  font-size: 36rpx;
  /* margin: 4% 4% 2% 4%; */
}

.imgs {
  display: flex;
  flex-direction: row;
  /* margin-bottom: 13%; */
}

.img-left {
  width: 48.5%;
  margin: 1% 0.5% 1% 1%;
}

.img-right {
  width: 48.5%;
  margin: 1% 1% 1% 0.5%;
}
