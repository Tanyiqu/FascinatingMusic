/* pages/about/about.wxss */

page {
  width: 100%;
  height: 100%;
}

.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
  filter: opacity(0.6);
}

.root {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  /* height: 22%; */
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-bottom: 3%;
}

.title {
  width: fit-content;
  margin: 0 auto;
  padding-left: 2%;
  padding-right: 2%;
  border-radius: 15rpx;
  color: #fff;
  background-color: #7f7f7f7f;
  font-size: 32rpx;
  margin-bottom: 1%;
}

.author {
  width: fit-content;
  margin: 0 auto;
  padding-left: 2%;
  padding-right: 2%;
  border-radius: 15rpx;
  color: #fff;
  background-color: #7f7f7f7f;
  font-size: 26rpx;
}

.head > image {
  margin: 0 auto;
  margin-top: 4%;
  margin-bottom: 4%;
  width: 25%;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #e9e9e9;
  margin-bottom: 3%;
}

.txt {
  margin-left: 3%;
  font-size: 26rpx;
}

.txt-inner {
  font-size: 26rpx;
  color: #fff;
}

.about-app {
  width: 90%;
  background-color: #5a78eac0;
  margin: 3%;
  padding: 2%;
  border-radius: 12rpx;
  /* filter: opacity(0.75); */
}

.about-me {
  width: 90%;
  /* height: 30%; */
  background-color: #c89ec4c0;
  margin: 3%;
  border-radius: 12rpx;
  padding: 2%;
}

.thanks {
  width: 90%;
  /* height: 30%; */
  background-color: #67d4b5c0;
  margin: 3%;
  padding: 2%;
  border-radius: 12rpx;
}
