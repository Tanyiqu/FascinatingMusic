/* pages/about/about.wxss */

page {
  width: 100%;
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  /* height: 22%; */
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-bottom: 3%;
}

.title {
  color: #515659;
  font-size: 32rpx;
  margin-bottom: 1%;
}

.author {
  color: #515659;
  font-size: 26rpx;
}

.head > image {
  margin: 0 auto;
  margin-top: 4%;
  margin-bottom: 4%;
  width: 25%;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #e9e9e9;
  margin-bottom: 3%;
}

.txt {
  margin-left: 3%;
  font-size: 26rpx;
}

.txt-inner {
  font-size: 26rpx;
  color: #fff;
}

.about-app {
  width: 90%;
  background-color: #5a78ea;
  margin: 3%;
  padding: 2%;
  border-radius: 12rpx;
}

.about-me {
  width: 90%;
  /* height: 30%; */
  background-color: #c89ec4;
  margin: 3%;
  border-radius: 12rpx;
  padding: 2%;
}

.thanks {
  width: 90%;
  /* height: 30%; */
  background-color: #67d4b5;
  margin: 3%;
  padding: 2%;
  border-radius: 12rpx;
}
